require_once 'script/load_phalcon.php';

$api = new OPNsense\Auth\API();

$rest_arg_index = null;
$opts = getopt('u:j', ['json'], $rest_arg_index);
$args = array_slice($argv, $rest_arg_index);
if (0 == count($args)) {
    cmd_usage();
}

$username = opt_value($opts, ['u'], exec('whoami'));
$json_output = opt_value($opts, ['j', 'json'], false);

switch ($args[0]) {
    case 'create':
        if (1 != count($args)) {
            cmd_usage();
        }

        $data = $api->createKey($username);

        if (null == $data) {
            printf("username \"%s\" not found\n", $username);
            exit(1);
        }

        if ($json_output) {
            echo json_encode($data)."\n";
        } else {
            print_data($data);
        }

        break;

    case 'delete':
        if (2 != count($args)) {
            cmd_usage();
        }
        $apikey = $args[1];

        $isFound = $api->dropKey($username, $apikey);
        if (!$isFound) {
            printf("apikey \"%s\" not found\n", $apikey);
            exit(1);
        }
        break;

    default:
        cmd_usage();
}

function print_data($data)
{
    foreach ($data as $key => $value) {
        printf("%s=%s\n", $key, $value);
    }
}

function cmd_usage()
{
    echo "Usage:\n";
    echo "       opnsense-apikey [-u username] [-j | --json] create \n";
    echo "       opnsense-apikey [-u username] delete [apikey]\n";
    exit(1);
}

function opt_value($opts, $names, $default)
{
    $value = $default;

    foreach ($names as $name) {
        if (isset($opts[$name]) and '' !== $opts[$name]) {
            if (is_bool($opts[$name])) {
                $value = true;
            } else {
                $value = $opts[$name];
            }
            break;
        }
    }

    return $value;
}

exit(0);
